<html>
<head>
    <script type="text/javascript" src="/public/js/jquery-1.6.4.min.js"></script>  
    <script type="text/javascript" src="/public/js/fscroll.js"></script>  
    <link rel="stylesheet" type="text/css" media="screen" href="/public/css/fscss.css">
   
</head>
<div data-role="page" data-url="<%= Rho::RhoConfig.start_path %>read">

  <div data-role="header" data-position="inline">
    

    <style>
    p, div {margin:0;padding:0;}
    body {background-color:#eee8aa; }
    #containbox{
          position:absolute;
          top:0%;
          left:0%;
          height:100%;
          width:100%;
          background-color:#eee8aa;
          overflow-y:scroll;
          -webkit-overflow-scrolling:touch;
      }
      
      
       #mid-ribbon{
          position:absolute;
          height:30%;
          width:100%;
          top:0%;
          background:url('/public/images/subtle_dots.png');
          }
           
        .text-wrap{
          position:absolute;
          width:84%;
          height:110%;
          left:6%;
          top:20%;
          background-color:white;
          -webkit-box-shadow: 0px 0px 0px 1px #f0f0f0;
          padding-left:4%;
          padding-top:5%;
          padding-bottom:3%;
          margin-right:3%;
          margin-bottom:2%;   
          
         
        }
        
        @font-face{
             font-family: type-b;
             src: url(/public/css/JennaSue.ttf);

          }
          
        @font-face{
             font-family: type-z;
             src: url(/public/css/arsenal.otf);
           
         }
          #text{
            position:absolute;
            height:100%;
            max-height:100%;
           
            -webkit-column-width:250px;
            -webkit-column-count:10;
            -webkit-column-gap:50px;
            padding:3% 2% 5% 2%;
            
            margin-right:3%;
            margin-bottom:2%;
            
            font-family:type-z;
            color:#424243;
            font-size:85%;
            line-height:160%;
            overflow-x:scroll;
            overflow-y:hidden;
            -webkit-overflow-scrolling:touch;
          }
                #text p {
                  text-align:justify;
                }
          
                
            
    </style>
    
    
  </div>
 
  <div data-role="content">
  
         
<h1></h1>
              <!--- Make  content div scrollable  --->   
      <div id="containbox">
       
          <div id="mid-ribbon">
              <p>
                <%= @artc.title %>
              </p>

          </div>
          
         
          <div class="text-wrap">
          
              <div id="text">
                <%= @artc.content %>

              </div>



                
          </div>

      
      
      
      
      
      
      
      
      
          
      <!-- = = = = = = = = =  E N D O F C O N T A I N E R = = = = = = = -->   
      </div>  <!-- endcontain  -->
  


      
       

  </div>

</div>

</html>