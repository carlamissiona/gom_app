<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Article</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @article.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Id: </td>
                <td class="itemValue"><input type="text" name="article[id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Title: </td>
                <td class="itemValue"><input type="text" name="article[title]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Author: </td>
                <td class="itemValue"><input type="text" name="article[author]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Link: </td>
                <td class="itemValue"><input type="text" name="article[link]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Content: </td>
                <td class="itemValue"><input type="text" name="article[content]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Quotes: </td>
                <td class="itemValue"><input type="text" name="article[quotes]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
