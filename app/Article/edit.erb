<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @article.id %></h1>
    <a href="<%= url_for :action => :show, :id => @article.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @article.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @article.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="article[id]" class="fieldLabel">Id</label>
            <input type="text" id="article[id]" name="article[id]" value="<%= @article.id %>" <%= placeholder( "Id" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="article[title]" class="fieldLabel">Title</label>
            <input type="text" id="article[title]" name="article[title]" value="<%= @article.title %>" <%= placeholder( "Title" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="article[author]" class="fieldLabel">Author</label>
            <input type="text" id="article[author]" name="article[author]" value="<%= @article.author %>" <%= placeholder( "Author" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="article[link]" class="fieldLabel">Link</label>
            <input type="text" id="article[link]" name="article[link]" value="<%= @article.link %>" <%= placeholder( "Link" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="article[content]" class="fieldLabel">Content</label>
            <input type="text" id="article[content]" name="article[content]" value="<%= @article.content %>" <%= placeholder( "Content" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="article[quotes]" class="fieldLabel">Quotes</label>
            <input type="text" id="article[quotes]" name="article[quotes]" value="<%= @article.quotes %>" <%= placeholder( "Quotes" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
