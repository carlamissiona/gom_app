           #menu li {
           
            display:inline-block;
            margin-right:17%;
            height:25%;
        
            z-index:90;  
            list-style-type:none;
            
           
           } 
           #menu p{
            line-height:30px;
            height:30%;
            text-align:center;
           }
            #menu li:hover{
             background-color:white;
           
           } 
          
       
